@model NutriTrackData.Entities.User

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="DateOfBirth">Date of birth</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="Weight">Weight (kg)</label>
        <input type="number" class="form-control" id="Weight" name="Weight" value="@Model.Weight" required min="1" max="500" />
    </div>

    <div class="form-group">
        <label for="Height">Height (cm)</label>
        <input type="number" class="form-control" id="Height" name="Height" value="@Model.Height" required min="50" max="250" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
