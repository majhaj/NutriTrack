@model NutriTrackData.Entities.User

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Edit Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                            <div class="invalid-feedback">Please provide your name.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="DateOfBirth" class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
                            <div class="invalid-feedback">Please provide a valid date of birth.</div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Weight" class="form-label">Weight (kg)</label>
                            <input type="number" class="form-control" id="Weight" name="Weight" value="@Model.Weight" required min="1" max="500" />
                            <div class="invalid-feedback">Please provide a valid weight (1-500 kg).</div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="Height" class="form-label">Height (cm)</label>
                            <input type="number" class="form-control" id="Height" name="Height" value="@Model.Height" required min="50" max="250" />
                            <div class="invalid-feedback">Please provide a valid height (50-250 cm).</div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save"></i> Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
