@model IEnumerable<NutriTrackData.Entities.WeightHistory>

<h2>Weight History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Weight (kg)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Date.ToString("yyyy-MM-dd")</td>
                <td>@entry.Weight kg</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "UserProfile")" class="btn btn-primary">Back to Profile</a>
