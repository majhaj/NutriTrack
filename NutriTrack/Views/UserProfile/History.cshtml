@model IEnumerable<NutriTrackData.Entities.WeightHistory>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center">
                    <h2>Weight History</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date</th>
                                <th>Weight (kg)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="2" class="text-center text-muted">No weight history available.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var entry in Model)
                                {
                                    <tr>
                                        <td>@entry.Date.ToString("yyyy-MM-dd")</td>
                                        <td>@entry.Weight kg</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "UserProfile")" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
