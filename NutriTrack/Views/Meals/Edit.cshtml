@model NutriTrackData.Entities.Meal

<h1>Edit Meal</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required>
    </div>
    <div class="form-group">
        <label for="Calories">Calories</label>
        <input type="number" class="form-control" id="Calories" name="Calories" asp-for="Calories" required>
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" id="CategoryId" name="CategoryId" asp-for="CategoryId" required>
            @foreach (var category in ViewBag.Categories as List<NutriTrackData.Entities.MealCategory>)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Products</label>
        @foreach (var product in ViewBag.Products as List<NutriTrackData.Entities.Product>)
        {
            var selectedProduct = Model.MealProducts?.FirstOrDefault(mp => mp.ProductId == product.Id);
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@product.Id" id="product_@product.Id" name="productIds"
                       @(selectedProduct != null ? "checked" : "")>
                <label class="form-check-label" for="product_@product.Id">
                    @product.Name (@product.Calories calories)
                </label>
                <input type="number" class="form-control mt-1" placeholder="Quantity (g)" name="quantities" 
                       value="@(selectedProduct != null ? selectedProduct.Quantity : 0)">
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
