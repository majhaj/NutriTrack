@using NutriTrackData.Entities
@model List<PhysicalActivity>

<h2>Your Physical Activities</h2>

@if (Model == null || !Model.Any())
{
    <p class="text-center">No activities available</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Activity Name</th>
                <th>Calories Burned Per Minute</th>
                <th>Duration (minutes)</th>
                <th>Total Calories Burned</th>
                <th>Date & Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.Name</td>
                    <td>@activity.CaloriesBurnedPerMinute</td>
                    <td>@activity.Duration</td>
                    <td>@(activity.CaloriesBurnedPerMinute * activity.Duration)</td>
                    <td>@activity.Time.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-sm btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@activity.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Create" class="btn btn-primary">Add New Activity</a>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this activity?');
    }
</script>