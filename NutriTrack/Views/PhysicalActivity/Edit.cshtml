@model NutriTrackData.Entities.PhysicalActivity

<h2>Edit Physical Activity</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CaloriesBurnedPerMinute" class="control-label"></label>
        <input asp-for="CaloriesBurnedPerMinute" class="form-control" />
        <span asp-validation-for="CaloriesBurnedPerMinute" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Time" class="control-label">Time</label>
        <p>@Model.Time.ToString("MM/dd/yyyy HH:mm")</p>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
