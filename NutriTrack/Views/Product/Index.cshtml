@model IEnumerable<NutriTrackData.Entities.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<form asp-action="Index" method="get">
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="text" name="name" class="form-control" placeholder="Search by name" />
        </div>
        <div class="col-md-3">
            <input type="number" name="minCalories" class="form-control" placeholder="Min Calories" step="0.01" />
        </div>
        <div class="col-md-3">
            <input type="number" name="maxCalories" class="form-control" placeholder="Max Calories" step="0.01" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Reset Filters</a>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Protein</th>
            <th>Carbs</th>
            <th>Fat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Calories</td>
                <td>@product.Protein</td>
                <td>@product.Carbs</td>
                <td>@product.Fat</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-success">Add New Product</a>
